 //作业0603
#include <stdio.h>

int main()           
{
	int sum; 
	
	printf("%d\n", 789 - 621);
	sum = 789 - 621;
	
	printf("%d\n", sum);                              
}
#include <stdio.h>

int main()
{
	int a,b,c;
	
	printf("请输入两个整数");
	scanf("%d%d", &a, &b);
	
	c =a + b;
	
	printf("%d\n", c);
}
#include <cmath>
#include <iostream>
using namespace std;                                 

int main()
{		
	double a, b, c,d;     
	cout << "请输入长方形的长和宽：";   
	cin >> a >> b;  
	c = a*b;
	d=a+a+b+b;      
	cout << c << '\n';
	cout << d << '\n';        
}
//练习2 10.16
学了进制转换
//练习3
#include <stdio.h>
int main()
{
	int num = 0;
	float score = 0;
	printf("请输入小明的学号和成绩：\n");
	scanf("%d%f",&num,&score);
	printf("小明同学的学号是%d,成绩是%.1f\n",num,score);
	return 0;
 } 
//练习4

int main()
{
	char ch;
	printf("请输入一个大写字母: \n");
	scanf("%c", &ch);
	printf("%c\n",ch + 32);
	return 0; 	
 } 
